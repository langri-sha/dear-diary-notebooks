{
  "name": "dear-diary-notebooks",
  "version": "1.0.0",
  "description": "Maja's notebooks touring the interwebs",
  "main": "src/index.js",
  "scripts": {
    "start": "PATH=$PATH:$(pwd)/node_modules/.bin webpack-dev-server -d --config webpack --hot --https --watch --host 0.0.0.0",
    "container": "export NAME=diary WORKDIR=/$NAME; if docker ps -a | grep -q $NAME; then npm run -s container:start; else npm run -s container:run; fi",
    "container:start": "docker start -ai diary",
    "container:run": "docker run --name=$NAME -w /$NAME -p 8080:8080 -v $(pwd):/$NAME -v $(pwd)/package.json:/package.json -v /root/.npm -v /node_modules -e \"NODE_PATH=/node_modules\" -e \"CHOKIDAR_USEPOLLING=1\" -e \"PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/node_modules/.bin\" --dns 8.8.8.8 --dns 8.8.4.4 --entrypoint=/bin/bash -it node:6",
    "container:rm": "docker rm -f diary"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langri-sha/dear-diary-notebooks.git"
  },
  "keywords": [
    "dear-diary-notebooks"
  ],
  "author": "Filip DupanoviÄ‡",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/langri-sha/dear-diary-notebooks/issues"
  },
  "homepage": "https://github.com/langri-sha/dear-diary-notebooks#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "dependencies": {
    "autoprefixer": "^6.3.7",
    "babel-core": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "commitizen": "^2.8.2",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.6",
    "exports-loader": "^0.6.3",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "image-webpack-loader": "^2.0.0",
    "node-static": "^0.7.8",
    "normalize.css": "^4.2.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "8.0.2",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.4.1",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "standard": "^8.0.0-beta.3",
    "standard-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "stylelint": "^7.0.3",
    "stylelint-config-standard": "^11.0.0",
    "url-loader": "^0.5.7",
    "webfontloader": "^1.6.26",
    "webpack": "^2.1.0-beta.20"
  },
  "devDependencies": {
    "source-map-support": "^0.4.2",
    "webpack-dev-server": "^2.1.0-beta.0"
  }
}
