{
  "name": "dear-diary-notebooks",
  "version": "1.0.0",
  "description": "Maja's notebooks touring the interwebs",
  "main": "index.js",
  "scripts": {
    "container": "export NAME=diary WORKDIR=/$NAME; if docker ps -a | grep -q $NAME; then npm run -s container:start; else npm run -s container:run; fi",
    "container:start": "docker start -ai diary",
    "container:run": "docker run --name=$NAME -w /$NAME -p 8080:8080 -v $(pwd):/$NAME -v $(pwd)/package.json:/package.json -v /root/.npm -v /node_modules -e \"NODE_PATH=/node_modules\" -e \"CHOKIDAR_USEPOLLING=1\" -e \"PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/node_modules/.bin\" --dns 8.8.8.8 --dns 8.8.4.4 --entrypoint=/bin/bash -it node:6",
    "container:rm": "docker rm -f diary"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/langri-sha/dear-diary-notebooks.git"
  },
  "keywords": [
    "dear-diary-notebooks"
  ],
  "author": "Filip DupanoviÄ‡",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/langri-sha/dear-diary-notebooks/issues"
  },
  "homepage": "https://github.com/langri-sha/dear-diary-notebooks#readme",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "commitizen": "^2.8.2",
    "cz-conventional-changelog": "^1.1.6",
    "standard": "^7.1.2"
  }
}
